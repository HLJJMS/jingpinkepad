<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    
    <LinearLayout
        android:id="@+id/ll_sign_group"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/menu_iamge"
            android:src="@drawable/sign_in" />

        <TextView
            android:id="@+id/tv_sign_group"
            style="@style/menu_tv"
            android:text="签到分组"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_induction_test"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/menu_iamge"
            android:src="@drawable/rumence" />

        <TextView
            android:id="@+id/tv_induction_test"
            style="@style/menu_tv"
            android:text="鉴赏赏析"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_scene_import"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/menu_iamge"
            android:src="@drawable/qingjingdaoru" />

        <TextView
            android:id="@+id/tv_scene_import"
            style="@style/menu_tv"
            android:text="基础训练"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_study_new"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/menu_iamge"
            android:src="@drawable/xuexixinzhi" />

        <TextView
            android:id="@+id/tv_study_new"
            style="@style/menu_tv"
            android:text="温故知新"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_deepen_use"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/menu_iamge"
            android:src="@drawable/shenhuayingyong" />

        <TextView
            android:id="@+id/tv_deepen_use"
            style="@style/menu_tv"
            android:text="知识拓展"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_solidify_practice"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/menu_iamge"
            android:src="@drawable/gonggulianxi" />

        <TextView
            android:id="@+id/tv_solidify_practice"
            style="@style/menu_tv"
            android:text="主题学习"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_class_conclusion"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/menu_iamge"
            android:src="@drawable/ketangxiaoji" />

        <TextView
            android:id="@+id/tv_class_conclusion"
            style="@style/menu_tv"
            android:text="回顾"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_go_out_test"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/menu_iamge"
            android:src="@drawable/chumenkao" />

        <TextView
            android:id="@+id/tv_go_out_test"
            style="@style/menu_tv"
            android:text="出门考"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ranking"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/menu_iamge"
            android:src="@drawable/paiming" />

        <TextView
            android:id="@+id/tv_ranking"
            style="@style/menu_tv"
            android:text="排名"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_class_record"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/menu_iamge"
            android:src="@drawable/ketangjilu" />

        <TextView
            android:id="@+id/tv_class_record"
            style="@style/menu_tv"
            android:text="课堂记录"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_happy"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/menu_iamge"
            android:src="@drawable/kaixinyike" />

        <TextView
            android:id="@+id/tv_happy"
            style="@style/menu_tv"
            android:text="开心一刻"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_responder"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/menu_iamge"
            android:src="@drawable/qiangda" />

        <TextView
            android:id="@+id/tv_responder"
            style="@style/menu_tv"
            android:text="抢答"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_red_packet"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/menu_iamge"
            android:src="@drawable/red_packet" />

        <TextView
            android:id="@+id/tv_red_packet"
            style="@style/menu_tv"
            android:text="发红包"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/menu_iamge"
            android:src="@drawable/iv_back"/>

        <TextView
            android:id="@+id/tv_onBack"
            style="@style/menu_tv"
            android:text="返回"/>

    </LinearLayout>


</LinearLayout>