<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_class1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="smjj.pureclass_pad1.activity.CreateClassActivity">

    <include
        android:id="@+id/ll_head_actionbar"
        layout="@layout/head_toolbar" />

    <include
        android:id="@+id/rl_bottom_actionbar"
        layout="@layout/bottom_copyright_bar" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/background_logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_head_actionbar"
        android:layout_above="@id/rl_bottom_actionbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="学        段"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size1" />

                <RadioGroup
                    android:id="@+id/rg_school_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_create_primary"
                        style="@style/Create_Button_Style"
                        android:checked="true"
                        android:textColor="@color/white"
                        android:text="小学" />

                    <RadioButton
                        android:id="@+id/rb_create_high"
                        style="@style/Create_Button_Style"
                        android:text="初中" />

                    <RadioButton
                        android:id="@+id/rb_create_university"
                        style="@style/Create_Button_Style"
                        android:text="高中" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="年        级"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size1" />

                <RadioGroup
                    android:id="@+id/rg_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_create_primary_first"
                        style="@style/Create_Button_Style"
                        android:checked="true"
                        android:textColor="@color/white"
                        android:text="一年级" />

                    <RadioButton
                        android:id="@+id/rb_create_primary_second"
                        style="@style/Create_Button_Style"
                        android:text="二年级" />

                    <RadioButton
                        android:id="@+id/rb_create_primary_three"
                        style="@style/Create_Button_Style"
                        android:text="三年级" />

                    <RadioButton
                        android:id="@+id/rb_create_primary_four"
                        style="@style/Create_Button_Style"
                        android:text="四年级" />

                    <RadioButton
                        android:id="@+id/rb_create_primary_five"
                        style="@style/Create_Button_Style"
                        android:text="五年级" />

                    <RadioButton
                        android:id="@+id/rb_create_primary_six"
                        style="@style/Create_Button_Style"
                        android:text="六年级" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="科        目"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size1" />

                <RadioGroup
                    android:id="@+id/rg_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_create_chinese"
                        style="@style/Create_Button_Style"
                        android:checked="true"
                        android:textColor="@color/white"
                        android:text="语文" />

                    <RadioButton
                        android:id="@+id/rb_create_math"
                        style="@style/Create_Button_Style"
                        android:text="数学" />

                    <RadioButton
                        android:id="@+id/rb_create_english"
                        style="@style/Create_Button_Style"
                        android:text="英语" />

                    <RadioButton
                        android:id="@+id/rb_create_physics"
                        style="@style/Create_Button_Style"
                        android:text="物理" />

                    <RadioButton
                        android:id="@+id/rb_create_chemistry"
                        style="@style/Create_Button_Style"
                        android:text="化学" />

                    <RadioButton
                        android:id="@+id/rb_create_biology"
                        style="@style/Create_Button_Style"
                        android:text="生物" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="年        级"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size1"
                    android:visibility="invisible" />

                <RadioGroup
                    android:id="@+id/rg_subject1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_create_history"
                        style="@style/Create_Button_Style"
                        android:text="历史" />

                    <RadioButton
                        android:id="@+id/rb_create_geography"
                        style="@style/Create_Button_Style"
                        android:text="地理" />

                    <RadioButton
                        android:id="@+id/rb_create_political"
                        style="@style/Create_Button_Style"
                        android:text="政治" />

                </RadioGroup>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="课程类型"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size1" />

                <LinearLayout
                    android:id="@+id/ll_course_type"
                    android:layout_width="160dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/shape_solid_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_course_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="请选择课程名称" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/pull_down_iv" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="班课编号"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size1" />

                <TextView
                    android:id="@+id/tv_class_no"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="80dp"
                    android:background="@drawable/shape_et_bg"
                    android:text="请获取班课编号"
                    android:textColor="@color/half_lucency"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="班课名称"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size1" />

                <EditText
                    android:id="@+id/et_class_name"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/shape_et_bg"
                    android:hint="请填写班课名称                                 "
                    android:textColorHint="@color/half_lucency"
                    android:textColor="@color/half_lucency"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="班课类型"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size1" />

                <LinearLayout
                    android:id="@+id/ll_type"
                    android:layout_width="160dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/shape_solid_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="请选择班课类型" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/pull_down_iv" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="开班日期"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size1" />

                <LinearLayout
                    android:id="@+id/ll_start_class_date"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/shape_solid_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_start_class_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="2017-07-05" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/calendar_iv" />


                </LinearLayout>


            </LinearLayout>


            <Button
                android:id="@+id/log_bt"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_bg"
                android:text="保  存"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <!--<include-->
            <!--android:id="@+id/rl_bottom_actionbar"-->
            <!--layout="@layout/bottom_copyright_bar" />-->

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
