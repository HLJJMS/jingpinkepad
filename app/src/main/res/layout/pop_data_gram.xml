<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_pop_bg1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_pop_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_student_list"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="保存备课包"
            android:textColor="#666666"
            android:textSize="@dimen/text_size1"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/iv_close_pop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:src="@drawable/close_pop"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/ll_pop_title"
        android:background="@color/light_black3"/>



    <EditText
        android:id="@+id/et_data_gram_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_centerInParent="true"
        android:textColor="#666666"
        android:textSize="@dimen/text_size1"
        android:hint="请输入备课包名称"
        android:text="2017年秋季哈根英语小三提高班备课包"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/et_data_gram_name"
        android:layout_alignLeft="@id/et_data_gram_name"
        android:layout_alignRight="@id/et_data_gram_name"
        android:background="@color/light_black3"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/log_bt"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_bg"
            android:text="保  存"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/cancle_bt"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/shape_gray_bg2"
            android:text="取  消"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>





</RelativeLayout>