<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lessons_bsk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="smjj.pureclass_pad1.activity.LessonsBskActivity">

    <include
        android:id="@+id/ll_head_actionbar"
        layout="@layout/head_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_head_actionbar"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rg_grade"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_create_primary_first"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_button_slidingment"
                    android:button="@null"
                    android:checked="true"
                    android:textColor="@color/white"
                    android:text="入门测(0)"/>

                <RadioButton
                    android:id="@+id/rb_create_primary_second"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_button_slidingment"
                    android:button="@null"
                    android:textColor="#666666"
                    android:text="深化应用(0)"/>
                <RadioButton
                    android:id="@+id/rb_create_primary_three"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_button_slidingment"
                    android:button="@null"
                    android:textColor="#666666"
                    android:text="巩固练习(0)"/>
                <RadioButton
                    android:id="@+id/rb_create_primary_four"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_button_slidingment"
                    android:button="@null"
                    android:textColor="#666666"
                    android:text="出门考(0)"/>

            </RadioGroup>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/bt_create"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="创建并使用"
                android:background="@drawable/shape_green_bg"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>


        <smjj.pureclass_pad1.xorzlistview.xlistview.XListView
            android:id="@+id/scheduling_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:divider="@color/white"
            android:dividerHeight="10dp">
        </smjj.pureclass_pad1.xorzlistview.xlistview.XListView>


    </LinearLayout>

    <ImageView
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/background_logo"/>


</RelativeLayout>
